<% if @category.nil? %>
  All Jobs for <strong><%= @company.name %></strong>

  <% @jobs.each do |job| %>
    <ul><%= link_to job.title, job_path(job) %> at <%= job.company.name %> </ul>
  <% end %>

  <%= link_to "Create a new job for #{@company.name}", new_company_job_path %>
  <br>
  <%= link_to "Home", companies_path %>
<% elsif @company.nil? %>
  All Jobs for <strong><%= @category.title %></strong>

  <% @jobs.each do |job| %>
    <ul><%= link_to job.title, job_path(job) %> at <%= job.category.title %> </ul>
  <% end %>

  <%= link_to "Back to All Categories", categories_path %>
<% end %>
